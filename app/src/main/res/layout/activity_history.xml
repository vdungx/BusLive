<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageViewXe"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/xk" />

        <TextView
            android:id="@+id/textViewDiemDiDen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Hà Nội - Đà Nẵng" />

        <TextView
            android:id="@+id/textViewNhaXe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:text="Nhà xe Tân Kim Chi" />

        <TextView
            android:id="@+id/textViewThoiGianDatVe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:text="Thời gian đặt vé: 5:45 - 19/3/2024" />

        <TextView
            android:id="@+id/textViewDiemDi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            tools:text="Điểm đi: Bến xe Nước ngầm" />

        <TextView
            android:id="@+id/textViewDiemDen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:text="Điểm đến: Bến xe Đà Nẵng" />

        <TextView
            android:id="@+id/textViewThoiGianKhoiHanh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            tools:text="Thời gian khởi hành: 19:20 - 20/3/2024" />

        <TextView
            android:id="@+id/textViewThoiGianDuKien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:text="Thời gian dự kiến: 06:35 - 21/3/2024" />

        <TextView
            android:id="@+id/textViewGiaVe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Giá vé: 774.000đ" />

        <TextView
            android:id="@+id/textViewTrangThai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:text="Trạng thái: Đã đặt" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/textViewLienHeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Liên Hệ:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewTenNhaXeLienHe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:text="Nhà xe Tân Kim Chi" />

        <TextView
            android:id="@+id/textViewSDTLienHe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            tools:text="SĐT: 099932122" />

        <TextView
            android:id="@+id/textViewDiaChiTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Địa chỉ:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewDiaChiDi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            tools:text="• Tại Đà Nẵng: - 58 Thanh Tịnh, Quận Liên Chiểu, TP Đà Nẵng" />

        <TextView
            android:id="@+id/textViewDiaChiDen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            tools:text="• Quay 22A Bến Xe Đà Nẵng: 75 Thanh Tịnh, Liên Chiểu, TP Đà Nẵng" />

        <TextView
            android:id="@+id/textViewDiaChiDonKhac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:text="• Tại Hà Nội: - Bến xe Nước Ngầm: Số 1 Ngọc Hồi, Hoàng Liệt, Hoàng Mai" />

    </LinearLayout>
</ScrollView>